@import "{jf:design}/app"

.measurementTableRow
  display: flex
  margin-left: -6px
  margin-bottom: 2px
  padding-left: 6px
  // required transformation to make inner fixed elements relative to this one
  transform(scale(1))
  width: calc(100% + 6px)
  position: relative
  &:hover
    .rowOptions
      right: 0

  .measurementDetails .timepointData
    display: flex
    margin-top: 1px
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    width: 260px
    height: 18px

    div
      flex: 1
      font-size: 16px
      font-weight: 400
      justify-content: space-around
      line-height: 18px
      padding-bottom: 4px

    .more
      position: absolute
      top: 27px
      right: -4px
      display: block
      width: 35px
      height: 35px
  &.active
    .measurementDetails .timepointData
      width: 100%
      height: calc(100% - 30px)
      overflow: visible
      white-space: normal

      .more
        display: none

    .measurementRowSidebar
      theme('color', '$activeColor')
      theme('background-color', '#006675')


  &.response-status .measurementRowSidebar .response-status-icon
    theme('background-color', '$defaultColor')
    theme('color', '$uiGray')
    border-radius: 11px
    font-size: 12px
    font-weight: 700
    height: 21px
    line-height: 22px
    margin: 5px auto 0
    text-align: center
    width: 21px

  &.warning .measurementRowSidebar
    theme('background-color', '$uiYellow')
    theme('color', '$textPrimaryColor')

    .warning-icon, svg
      width: 22px
      height: 20px
      pointer-events: inherit

    .warning-icon
      margin: 7px auto 0

    svg
      theme('fill', '$textPrimaryColor')

  .rowOptions
    theme('background-color', 'transparent')
    overflow: hidden
    transition(all 0.3s ease)
    text-align: center
    position: absolute
    top: 0
    right: -30px
    display: flex
    flex-direction: column
    justify-content: center
    width: 25px
    height: 100%

    .rowAction
      theme('color', '$defaultColor')
      cursor: pointer
      transition(all 0.3s ease)
      width: 100%
      line-height: 2.5

      &:hover, &:active
        theme('color', '$textPrimaryColor')

        svg
          theme('fill', '$textPrimaryColor')
          theme('stroke', '$textPrimaryColor')

    svg
      theme('fill', '$defaultColor')
      theme('stroke', '$defaultColor')
      transition(all 0.3s ease)

      &.edit-icon
        width: 18px
        height: 17px

      &.close-icon
        width: 18px
        height: 18px

  .measurementRowSidebar
    theme('background', '$uiGrayDark')
    theme('color', '$textSecondaryColor')
    cursor: pointer
    flex: 1
    max-width: 30px
    transition(all 0.3s ease)
    padding-top: 5px
    min-height: 67px
    &:hover
      .arrow
        visibility: visible

    .arrow
      font-size: 20px
      text-align: center
      display: block
      margin-right: 5px
      visibility: hidden
      height: 20px
      &:hover
        theme('color', '$textPrimaryColor')

    .measurementNumber
      font-size: 16px
      font-weight: 400
      margin-right: 5px
      //padding-top: 10px
      text-align: center


  .measurementDetails
    flex: 1
    padding: 5px 2px 0 0
    theme('background', '$uiGrayDarkest')
    min-width: 220px

    &>*
      padding-left: 5px

    .location
      font-weight: 400
      font-size: 16px
      theme('color', '$textSecondaryColor')
      height: 30px
      line-height: 30px
      margin-left: -2px
      width: 100%
      display: flex

      #visible-check
       margin: 6px 5px 0
       width: 18px
       height: 18px
