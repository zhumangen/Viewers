@require '{jf:design}/app'

.report-sidebar
  theme('color', '$textPrimaryColor')
  height: 100%

  .report-header
    display: flex

    &>div
      flex: 1
      height: 40px
      line-height: 40px
      text-align: center
      font-size: 1.5rem
      theme('background-color', '$uiGrayLight')
      cursor: pointer

      &.selected
        theme('background-color', '$activeColor')

      .hi-notifier
        display: inline-block
        width: 0
        height: 0
        border: 4px solid #06f906
        border-radius: 50%


  .report-content
    theme('color', '$defaultColor')
    height: calc(100% - 40px)

    .scroll-area .scrollable .content-item
      theme('background', '$uiGray')
      margin: 3px 0
      padding: 6px

      .item-header
        height: 50px
        line-height: 50px
        font-size: 1.8rem
        font-weight: normal

      .item-details
        theme('color', '$textPrimaryColor')
        theme('background', '$uiGrayDarkest')
        // width: 100%
        // height: auto
        padding: 14px 10px
        white-space: normal
        line-height: 2rem
        word-break: break-all
        word-wrap: break-word
        font-size: 16px
