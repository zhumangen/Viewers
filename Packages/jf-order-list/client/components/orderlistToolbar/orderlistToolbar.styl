@import "{jf:design}/app"

.orderlistToolbar
  margin: 0 30px

  button
    margin: 0 5px

    &.btn
      theme('background-color', '$activeColor')
      color: #fff
      cursor: pointer
      font-size: 15px
      font-weight: bold
      height: 37px
      text-align: center

      &[disabled]
        /* opacity: 0.5 */
        cursor: not-allowed

      &:hover:enabled
        theme('background-color', '$defaultColor')
