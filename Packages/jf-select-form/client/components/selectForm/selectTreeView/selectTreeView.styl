.tree-root
    color: #91b9cd
    
    .tree-node
        display: flex-v
        margin: 6px
        
        .node-name
            margin: 2px
            height: 2rem
            line-height: 2rem
            cursor: pointer

            i
                margin-right: 2px

            &.hover
                background: #f5f7fa
            
            &.selected
                background: #8fb5db
            
        .tree-leaves
            display: flex
            flex-wrap: wrap
            margin: 6px 12px
            font-size: 14px
            
            label  
