@import "{jf:design}/app"

// TODO: [design] can't we use colors that are already in common pallete?
$gray1 = #A3A3A3
$gray2 = #A0A0A0
$gray3 = #C4C4C4
$gray4 = #C0C0C0
$gray5 = #9B9B9B
$gray6 = #303030

.tree-root
    theme('color', '$defaultColor')

    .tree-node
        display: flex-v
        margin: 6px
        padding: 2px

        .node-name
            margin: 2px
            height: 2rem
            line-height: 2rem
            cursor: pointer

            i
                margin-right: 2px

        .tree-leaves
            display: flex
            flex-wrap: wrap
            margin: 6px 12px
            font-size: 16px

            .tree-leaf
                margin-right: 1.5rem

            label
                font-weight: normal

                &.disabled
                    pointer-events: none;
                    opacity: 0.3;

    .tree-node-1
        theme('background', '$uiGrayDarkest')
        font-size: 18px

        .tree-node-2
            theme('background', '$uiGrayDark')
            font-size: 16px

            .tree-node-3
                theme('background', '$uiGrayDark')
                font-size: 16px
