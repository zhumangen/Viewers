@import "{jf:design}/app"

.import-dicom

  .filter-row
    display: flex
    align-items: center
    theme('background', '$uiGrayDarker')
    height: $dicomListToolbarHeight
    padding: 0 $studyListPadding
    margin: 2px 0
    theme('color', '$textSecondaryColor')

    &>div
      flex: 1
      margin: 5px

  .dicom-list
    theme('background-color', '$primaryBackgroundColor')
    color: white
    height: calc(100% - 91px)
    position: relative
    width: 100%

    .loadingTextDiv
      theme('color', '$textSecondaryColor')
      font-size: 30px
