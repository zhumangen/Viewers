@import "{jf:design}/app"

.import-dicom
  margin: 20px 2%

  .filter-row
    display: flex
    align-items: center
    padding: 5px
    margin-bottom: 4px
    theme('background', '$uiGrayDarker')
    theme('color', '$textSecondaryColor')

    &>div
      flex: 1
      margin: 5px

  .dicom-list
    theme('background-color', '$primaryBackgroundColor')
    color: white
    height: calc(100% - 91px)
    position: relative
    width: 100%

    .loadingTextDiv
      theme('color', '$textSecondaryColor')
      font-size: 30px
