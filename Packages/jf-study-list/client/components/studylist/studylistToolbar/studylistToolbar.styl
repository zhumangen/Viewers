@import "{jf:design}/app"

.studylistToolbar
  .addNewStudy
    margin: 0 20px

    label
      theme('color', '$textSecondaryColor')
      font-weight: 400
      font-size: 18px
      cursor: pointer

      *
        pointer-events: none

      &:hover
        theme('color', '$hoverColor')

      &:active
        theme('color', '$activeColor')

    input
      width: 0.1px;
      height: 0.1px
      opacity: 0
      overflow: hidden
      position: absolute
      z-index: -1
